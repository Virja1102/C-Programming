Q3

#include <stdlib.h>  

int countDigits(int number) {
    
    if (number == 0) 
    
    number = abs(number);

    int count = 0;
    while (number > 0) {
        number /= 10;   
        count++;       
    }

    return count;
}

int main() {
    int number;

    printf("Enter a number: ");
    scanf("%d", &number);
   
    printf("Total number of digits: %d\n", countDigits(number));

    return 0;
}
